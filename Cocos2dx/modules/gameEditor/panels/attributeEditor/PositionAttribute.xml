<f:Group percentWidth="100" height="135" creationComplete="this.init();" xmlns:f="flower">
    <f:script src="./PositionAttribute.script"/>
    <f:Group percentWidth="100" height="20">
        <f:Label x="30" text="位置和大小" verticalCenter="0"/>
    </f:Group>
    <f:Group percentWidth="100" top="30" bottom="0">
        <f:layout>
            <f:VerticalLayout gap="20"/>
        </f:layout>
        <f:Group horizontalCenter="0">
            <f:Label x="30" text="x" verticalCenter="0"/>
            <f:Rect x="40" fillColor="0xffffff" lineWidth="1" lineColor="0x333333" height="20" width="40"/>
            <f:Input id="xInput" x="40" width="50" verticalCenter="0"/>
            <f:Label text="y" x="130" verticalCenter="0"/>
            <f:Rect x="140" fillColor="0xffffff" lineWidth="1" lineColor="0x333333" height="20" width="40"/>
            <f:Input id="yInput" x="140" width="50" verticalCenter="0"/>
        </f:Group>
        <f:Group horizontalCenter="0">
            <f:Label x="5" text="width" verticalCenter="0"/>
            <f:Rect x="40" fillColor="0xffffff" lineWidth="1" lineColor="0x333333" height="20" width="40"/>
            <f:Input id="widthInput" x="40" width="50" verticalCenter="0"/>
            <f:Label text="height" x="100" verticalCenter="0"/>
            <f:Rect x="140" fillColor="0xffffff" lineWidth="1" lineColor="0x333333" height="20" width="40"/>
            <f:Input id="heightInput" x="140" width="50" verticalCenter="0"/>
        </f:Group>
        <f:Group horizontalCenter="0">
            <f:Label text="scaleX" verticalCenter="0"/>
            <f:Rect x="40" fillColor="0xffffff" lineWidth="1" lineColor="0x333333" height="20" width="40"/>
            <f:Input id="scaleXInput" x="40" width="50" verticalCenter="0"/>
            <f:Label text="scaleY" x="100" verticalCenter="0"/>
            <f:Rect x="140" fillColor="0xffffff" lineWidth="1" lineColor="0x333333" height="20" width="40"/>
            <f:Input id="scaleYInput" x="140" width="50" verticalCenter="0"/>
        </f:Group>
    </f:Group>
</f:Group>
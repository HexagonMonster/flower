<f:Combox width="100" class="Combox" xmlns:f="flower" xmlns:s="software">
    <f:Group percentWidth="100">
        <f:Rect percentWidth="100" percentHeight="100" fillColor="0xffffff"/>
        <f:Label id="label" left="0" right="-30" verticalCenter="0"/>
        <f:Button id="button" width="20" height="20" right="0">
            <f:Rect percentWidth="100" percentHeight="100" fillColor.up="0x5e5d5d" fillColor.down="0x464646"/>
        </f:Button>
    </f:Group>
    <f:list>
        <s:ScrollerList width="100" height="200">
            <f:viewport>
                <s:LabelList selectTime="touch_end"/>
            </f:viewport>
        </s:ScrollerList>
    </f:list>
</f:Combox>